"" Source your .vimrc
"source ~/.vimrc
Plug 'tpope/vim-surround'
Plug 'tpope/vim-commentary'

set surround

let mapleader = " "

"" -- Suggested options --
" Show a few lines of context around the cursor. Note that this makes the
" text scroll if you mouse-click near the start or end of the window.
set scrolloff=5

" Do incremental searching.
set incsearch

" Don't use Ex mode, use Q for formatting.
map Q gq

set relativenumber
set number

" Telescope equivalents
nmap <leader>b <Action>(Switcher)
nmap <leader>fF <Action>(SearchEverywhere)
nmap <leader>fm <Action>(ShowNavBar)
nmap <leader>fM <Action>(ActivateProjectToolWindow)
nmap <leader>/ <Action>(FindInPath)
vmap <leader>/ <Action>(FindInPath)

" toggle panes
nmap <leader>xx <Action>(ActivateProblemsViewToolWindow)
nmap <leader>xr <Action>(ActivateRunToolWindow)
nmap <leader>xd <Action>(ActivateDebugToolWindow)
nmap <leader>w <Action>(HideAllWindows)

" LSP equivalents
nmap <leader>cf <Action>(ReformatCode)
nmap <nowait> <leader>cr <Action>(RenameElement)
nmap gd <Action>(GotoDeclaration)
nmap gI <Action>(GotoImplementation)
nmap gr <Action>(ShowUsages)
nmap [d <Action>(GotoPreviousError)
nmap ]d <Action>(GotoNextError)
nmap gx <Action>(ShowIntentionActions)
nmap gk <Action>(ShowErrorDescription)


" Basic buffer switching
nnoremap <leader><leader> <C-6>
nmap <leader>1 <Action>(GoToTab1)
nmap <leader>2 <Action>(GoToTab2)
nmap <leader>3 <Action>(GoToTab3)
nmap <leader>4 <Action>(GoToTab4)
nmap <leader>5 <Action>(GoToTab5)
nmap <leader>6 <Action>(GoToTab6)
nmap <leader>7 <Action>(GoToTab7)
nmap <leader>8 <Action>(GoToTab8)
nmap <leader>9 <Action>(GoToTab9)

" basic keymaps, such as copy/paste and close insert mode
nnoremap \y "*y
vnoremap \y "*y
nnoremap \p "*p
inoremap jj <ESC>
inoremap kk <ESC>
inoremap jk <ESC>


" Testing and debugging
map <leader>tr <Action>(RunClass)
map <leader>tt <Action>(RunAnything)
map <leader>dr <Action>(DebugClass)
map <leader>dd <Action>(Debug)
map <leader>db <Action>(ToggleLineBreakpoint)
map <leader>do <Action>(StepOver)
map <leader>dO <Action>(StepOut)
map <leader>di <Action>(StepIn)
map <leader>dc <Action>(Resume)


" Find more examples here: https://jb.gg/share-ideavimrc

set ideajoin
